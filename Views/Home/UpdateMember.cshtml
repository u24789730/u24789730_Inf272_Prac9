@model u24789730_Inf272_Prac9.Models.Member

@{
    ViewBag.Title = "Update membership profile";
}

<div class="container">
    <h2>Update membership profile</h2>
    
    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert @(ViewBag.MessageType == "success" ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
            @ViewBag.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.Id == 0)
    {
        <div class="alert alert-info">
            <p>Enter the member ID to load their profile for updating:</p>
        </div>
        
        using (Html.BeginForm("UpdateMember", "Home", FormMethod.Get, new { @class = "mb-4" }))
        {
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="id" class="form-label">Member ID</label>
                        <input type="number" name="id" class="form-control" placeholder="Enter member ID" required />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">&nbsp;</label>
                        <button type="submit" class="btn btn-primary d-block">Load Member</button>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        using (Html.BeginForm("UpdateMember", "Home", FormMethod.Post, new { @class = "mt-4" }))
        {
            @Html.HiddenFor(m => m.Id)
            
            <div class="mb-3">
                <label for="Id" class="form-label">ID</label>
                @Html.TextBoxFor(m => m.Id, new { @class = "form-control", @readonly = "readonly" })
            </div>

            <div class="mb-3">
                <label for="FullName" class="form-label">Name</label>
                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", @placeholder = "Enter full name", @required = "required" })
            </div>

            <div class="mb-3">
                <label for="ClubName" class="form-label">Club Name</label>
                @Html.DropDownListFor(m => m.ClubName, new SelectList(new[] { "Blue Sky", "Rotary", "Red Hat", "Spicy" }, Model.ClubName), "Select a club", new { @class = "form-select", @required = "required" })
            </div>

            <div class="mb-3">
                <label for="Age" class="form-label">Age</label>
                @Html.TextBoxFor(m => m.Age, new { @class = "form-control", @type = "number", @min = "16", @max = "100", @placeholder = "Enter age", @required = "required" })
            </div>

            <div class="mb-3">
                <label for="MembershipFee" class="form-label">Fee</label>
                <div class="input-group">
                    <span class="input-group-text">R</span>
                    @Html.TextBoxFor(m => m.MembershipFee, new { @class = "form-control", @type = "number", @step = "0.01", @min = "0", @placeholder = "0.00", @required = "required" })
                </div>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-success">Save</button>
                <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Home</a>
            </div>
        }
    }
</div> 